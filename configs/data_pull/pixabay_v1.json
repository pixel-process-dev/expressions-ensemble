{
  "source": "pixabay",

  "search": {
    "api_url":"https://pixabay.com/api/",
    "emotions": {
      "angry": ["angry"],
      "disgust": ["disgust"],
      "fear": ["fear"],
      "happy": ["happy"],
      "sad": ["sad"],
      "surprise": ["surprised"],
      "neutral": ["neutral"]
    },
    "keyword_template": "{emotion} face",
    "per_page": 200,
    "max_pages": 4
  },

  "output": {
    "raw_image_dir": "data/raw/pixabay_v1",
    "manifest_filename": "manifest.parquet",
    "run_log_filename": "run_log.parquet",
    "seen_ids_filename": "seen_ids.parquet"
  },

  "rate_limit": {
    "min_remaining_requests": 20,
    "sleep_seconds_on_low_remaining": 30
  },

  "early_stop": {
    "min_new_fraction": 0.1
  }
}
