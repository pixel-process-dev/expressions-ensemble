{
  "run_name": "raf-db",
  "data_source": "raf-db",
  "metadata_path": "configs/aggregation_mixing/raf_db.parquet",
  "output_dir": "models/raf_db",
  
  "training": {
    "epochs": 30,
    "batch_size": 32,
    "learning_rate": 0.0003,
    "optimizer": "adam",
    "optimizer_kwargs": {},
    "scheduler": "none",
    "scheduler_kwargs": {},
    "seed": 42
  },
  
  "data": {
    "image_size": 224,
    "transform_preset": "imagenet",
    "augmentation": "light"
  },
  
  "model": {
    "architecture": "resnet18",
    "pretrained": "IMAGENET1K_V1",
    "unfrozen_layers": ["layer3", "layer4", "fc"]
  },
  
  "mlflow": {
    "experiment_name": "emotion-movie-transfer"
  }
}
